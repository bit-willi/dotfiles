#!/usr/bin/env bash

selected_theme=$(gsettings get org.gnome.desktop.interface color-scheme)

mode='prefer-dark'
gtk_theme='gruvbox-dark-gtk'

if [ "$selected_theme" == "'prefer-dark'" ]; then
        mode="prefer-light"
        gtk_theme='gruvbox-light-gtk'
fi

echo "Theme:" $mode

gsettings set org.gnome.desktop.interface color-scheme $mode
#kitty +kitten themes --reload-in=all '$kitty_theme'

echo "Net/ThemeName \"$gtk_theme\"" > $HOME/.xsettingsd
killall -HUP xsettingsd
