[icons]
icons = "awesome5"

[[themes]]
theme = "gruvbox-dark"

[[block]]
block = "custom"
interval = 1
command = "echo -n '\uf11c ' && xset q | grep 'Caps Lock' | cut -d':' -f3 | grep -c 'on' | sed -e 's/1/A/;s/0/a/'"
format="{ $icon|} $text.pango-str() "

[[block]]
block = "custom"
command="echo -n '\uf26c ' && optimus-manager --print-mode | cut -d' ' -f5"
format="{ $icon|} $text.pango-str() "

[[block]]
block = "disk_space"
path = "/"
info_type = "available"
interval = 20
warning = 20.0
alert = 10.0
format = " $icon ROOT $available "
format_alt = " $icon ROOT $available / $total "

[[block]]
block = "disk_space"
path = "/home"
info_type = "available"
interval = 20
warning = 20.0
alert = 10.0
format = " $icon HOME $available "
format_alt = " $icon HOME $available / $total "

[[block]]
block = "memory"
format = " $icon $mem_free.eng(w:3,u:B,p:M)/$mem_total.eng(w:3,u:B,p:M)($mem_used_percents.eng(w:2)) "
format_alt = " $icon_swap $swap_free.eng(w:3,u:B,p:M)/$swap_total.eng(w:3,u:B,p:M)($swap_used_percents.eng(w:2)) "
interval = 30
warning_mem = 70
critical_mem = 90

[[block]]
block = "cpu"
interval = 1

[[block]]
block = "load"
format = " $icon $1m.eng(w:4) "
interval = 1

[[block]]
block = "temperature"
format = " $icon $max max "
format_alt = " $icon $min min, $max max, $average avg "
interval = 10
chip = "*-isa-*"

[[block]]
block = "sound"

[[block]]
block = "backlight"

[[block]]
block = "battery"
format = " $icon $percentage $time "

[[block]]
block = "custom"
interval = 60
command = "echo -n '\uf0e0 ' &&  notmuch count 'tag:inbox and to:willian.souza.ti@gmail.com or cc:willian.souza.ti@gmail.com'"
format = "{ $icon|} $text.pango-str() "
[[block.click]]
button = "left"
cmd = "cd ~/mail/personal; gmi pull"

[[block]]
block = "time"
interval = 60
[block.format]
full = " $icon $timestamp.datetime(f:'%a %d/%m %R')"
short = " $icon $timestamp.datetime(f:%R)"
